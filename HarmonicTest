import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class HarmonicTest{
  private static final double DELTA = 1e-9;

  @Test
  public void testHarmonicPositiveSmall(){
    assertEquals(1.0, Recursion1.harmonic(1),DELTA);
  }
   @Test
  public void testHarmonicPositiveThree(){
    assertEquals(1.0+5.0+0.333333, Recursion1.harmonic(3),DELTA);
  }
   @Test
  public void testHarmonicNegative(){
    assertEquals(1.0/1.5, Recursion1.harmonic(-2),DELTA);
  }
   @Test
  public void testHarmonicPositiveLarger(){
    double expected = 1.0 + 0.5 + 0.333333 + 0.25 + 0.2;
    assertEquals(expected, Recursion1.harmonic(5),DELTA);
  }
   @Test
  public void testHarmonicPositiveZeroThrows(){
    assertThrows(IllegalArgumentException.class, ()->{
      Recursion1.harmonic(0);
    });
  }

}
